  <glossary id="UUID83542c0b-445a-4128-7256-e06017adfd45">
    <definition id="fs-idp60642480">
      <term id="UUID6d20f365-0126-456f-6ddf-f6391f76398c">efektywność alokacyjna (ang. <foreign xml:lang="en" id="UUID5fe4d29d-959a-4df1-720b-ca19006d3b0c">allocative efficiency</foreign>)</term>
      <meaning id="fs-idp164831712">
        <para id="UUIDa1ad191b-b2a7-4010-43a0-83d501866705">optymalna wielkość produkcji dobra lub usługi spełniająca zależność, zgodnie z którą społeczna korzyść krańcowa związana z wyprodukowaniem kolejnej jednostki jest równa społecznemu kosztowi krańcowemu</para>
      </meaning>
    </definition>
    <definition id="fs-idp65087328">
      <term id="UUID8116528b-5217-4787-6206-d5c10bb74e31">zysk krańcowy (ang. <foreign xml:lang="en" id="UUID4a1a00ba-b9af-4274-6b64-ff25a62f5403">marginal profit</foreign>)</term>
      <meaning id="fs-idp171438208">
        <para id="UUIDe56f9b6f-de13-41c9-42a3-a0f0f083c0a0">zysk związany ze sprzedażą kolejnej jednostki produkcji obliczony jako różnica między przychodem krańcowym a kosztem krańcowym</para>
      </meaning>
    </definition>
