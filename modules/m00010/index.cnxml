  <glossary id="UUIDe58fc4e7-e598-431d-7bea-2feb95c294de">
    <definition id="fs-idm69493936">
      <term id="UUIDd087a0af-4aa2-4143-4028-6c087c8e7f60">niewidzialna ręka (ang. <foreign xml:lang="en" id="UUID94d9c8af-3748-4108-797e-60c769d3dd89">invisible hand</foreign>)</term>
      <meaning id="fs-idp27061216">
        <para id="UUID81c3df1b-01bb-4a94-5251-3923b3e72078">koncepcja Adama Smitha, w myśl której zachowanie jednostek zgodne z własnym interesem bardzo często prowadzi do pozytywnych skutków społecznych</para>
      </meaning>
    </definition>
    <definition id="fs-idm38152560">
      <term id="UUIDeb2f3123-00df-4d55-4df5-eefe7844e267">stwierdzenie normatywne (ang. <foreign xml:lang="en" id="UUID599d023c-d0ac-4bea-5419-2f1c42d24757">normative statement</foreign>)</term>
      <meaning id="fs-idm86526112">
        <para id="UUID6dca0e27-4518-4ebf-74fa-c943d73ac5a7">stwierdzenie, które opisuje, jak powinien wyglądać świat zdaniem osoby, która to stwierdzenie wypowiada</para>
      </meaning>
    </definition>
    <definition id="fs-idp22821184">
      <term id="UUID8dbaaa99-6607-4a16-63f3-0fd9de1b96cd">stwierdzenie pozytywne (ang. <foreign xml:lang="en" id="UUID4f63a837-d791-4fa1-61dc-39fda5d00742">positive statement</foreign>)</term>
      <meaning id="fs-idm141831488">
        <para id="UUID1e9cb8bb-e840-453b-6c48-64fa6c325781">stwierdzenie, które opisuje świat takim, jaki on jest</para>
      </meaning>
    </definition>
  </glossary>
