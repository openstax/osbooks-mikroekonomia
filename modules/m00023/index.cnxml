ry id="UUID704d5026-45vo-s771-gc1b1qs746276wjz"><emphasis effect="bold">81</emphasis></entry><entry id="UUID704d5026-v8i7-hr5c-0z6tpwtyq96xkoba"><emphasis effect="bold">11</emphasis></entry><entry id="UUID704d5026-r8fz-ycuq-gu16yc0whcpi33fe"><emphasis effect="bold">11/7 = 1,6</emphasis></entry></row><row id="UUID704d5026-fb8i-mf97-twlznsw1zsr77rt2"><entry id="UUID704d5026-cahr-hskn-4mwmvivfsjp12u2z">7</entry><entry id="UUID704d5026-vvfk-o0px-fas945m04t1obz72">123</entry><entry id="UUID704d5026-bzx6-o9j9-f00zh5mfzgt0dekz">12</entry><entry id="UUID704d5026-msvp-p4sb-b8timz9yqhs1iu36">  12/14 = 1,2</entry><entry id="UUID704d5026-h90u-cph6-2aom2he0jugf7hcc">7</entry><entry id="UUID704d5026-li34-co4z-apmmllypu80yyze0">91</entry><entry id="UUID704d5026-kiq6-kh0z-14287e4f8bduq9oq">10</entry><entry id="UUID704d5026-22jp-f25q-e5015ouldshoe09m">10/7 = 1,4</entry></row></tbody></tgroup><caption id="UUIDa6809fb7-dc29-4dc0-4b0e-f9b4adce8b39" /></table>
