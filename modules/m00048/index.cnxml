  <glossary id="UUID3c2b7fa8-d418-42ef-67d1-1f6ef5198ebb">
    <definition id="fs-idm736096">
      <term id="UUID3cc010d5-7c32-4ee8-560e-6a052db54e7e">stopa procentowa (ang. <foreign xml:lang="en" id="UUID2c3f46af-6b7d-4795-5653-c734340fb6e5">interest rate</foreign>)</term>
      <meaning id="fs-idm151585536">
        <para id="UUID3a703b80-765e-493b-4a46-1fa75c75a1fa">cena pożyczek na rynku finansowym; stopa zwrotu z inwestycji</para>
      </meaning>
    </definition>
    <definition id="fs-idm108604544">
      <term id="UUIDad22812e-1483-4f70-6891-359232d0cf31">prawo antylichwiarskie (ang. <foreign xml:lang="en" id="UUID02efc1b3-f654-4b6b-5a33-ff3184c0a8cf">anti-usury law</foreign>)</term>
      <meaning id="fs-idm116447040">
        <para id="UUID06fa4803-19da-48e3-67c2-a0eaf4df46b5">prawo, które ustanawia górny limit oprocentowania, jakiego mogą żądać pożyczkodawcy za oferowany klientom kapitał</para>
      </meaning>
    </definition>
