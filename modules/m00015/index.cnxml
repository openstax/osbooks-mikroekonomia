  <glossary id="UUID99deadc4-5438-4788-7c2e-8a7c32a20f6e">
    <definition id="fs-idm31045488">
      <term id="UUID8eaf4559-aff7-4bf3-42fe-3dad1abb3409">cena maksymalna (ang. <foreign xml:lang="en" id="UUID0e576be8-ecea-4918-5a60-4b929e335e72">price ceiling</foreign>)</term>
      <meaning id="fs-idm97401792">
        <para id="UUID82179668-073d-42c1-4f98-5edee02056ea">poziom ceny określony przepisami prawa, powyżej którego nie może wzrosnąć cena rynkowa</para>
      </meaning>
    </definition>
    <definition id="fs-idm33170736">
      <term id="UUIDf5516b0f-072e-42c7-56c9-039851169e39">kontrola cen (ang. <foreign xml:lang="en" id="UUID6bb2e396-5d0f-4b75-5b84-589ac9080a8f">price control</foreign>)</term>
      <meaning id="fs-idp6837056">
        <para id="UUIDc26d2e72-163a-4ac2-623c-0ee21a090b7d">prawa uchwalane przez państwo w celu ograniczenia swobody kształtowania cen rynkowych przez siły popytu i podaży</para>
      </meaning>
    </definition>
    <definition id="fs-idp96167168">
      <term id="UUID2fbc0d92-01ab-4000-6451-263a5329e04d">cena minimalna (ang. <foreign xml:lang="en" id="UUID74160c9a-b233-4967-4b41-167295f73462">price floor</foreign>)</term>
      <meaning id="fs-idm50176672">
        <para id="UUID8fb10fd5-bf0f-4be1-60c2-c654c170346c">poziom ceny określony przepisami prawa, poniżej którego nie może spaść cena rynkowa</para>
      </meaning>
    </definition>
  </glossary>
